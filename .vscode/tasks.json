{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"run",
				"--environment",
				"m5stickc_plus2"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Upload",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"run",
				"--target",
				"upload",
				"--environment",
				"m5stickc_plus2"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "Build & Upload",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"run",
				"--target",
				"upload",
				"--environment",
				"m5stickc_plus2"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"run",
				"--target",
				"clean",
				"--environment",
				"m5stickc_plus2"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "Full Clean",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"run",
				"--target",
				"fullclean",
				"--environment",
				"m5stickc_plus2"
			],
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		},
		{
			"label": "Monitor Serial",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"device",
				"monitor",
				"--environment",
				"m5stickc_plus2"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Upload and Monitor",
			"type": "shell",
			"command": "${userHome}/.platformio/penv/bin/platformio",
			"args": [
				"run",
				"--target",
				"upload",
				"--target",
				"monitor",
				"--environment",
				"m5stickc_plus2"
			],
			"isBackground": true,
			"problemMatcher": [
				"$platformio"
			],
			"group": "build"
		}
	]
}